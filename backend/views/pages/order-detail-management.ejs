<div class="container mt-5">
    <h1 class="mb-4">Chi tiết đơn hàng</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Mã đơn hàng: <%= order._id %></h5>
            <p class="card-text">Người mua: <%= order.customer_info.full_name %></p>
            <p class="card-text">Số điện thoại: <%= order.customer_info.phone %></p>
            <p class="card-text">Địa chỉ: <%= order.customer_info.address %></p>
            <p class="card-text">Trạng thái: <%= order.status %></p>
            <p class="card-text">Tổng tiền: <%= order.total_price %> VND</p>
            <p class="card-text">Ngày đặt: <%= new Date(order.created_at).toLocaleDateString() %></p>
        </div>
    </div>

    <h3 class="mt-4">Sản phẩm</h3>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
        </tr>
        </thead>
        <tbody>
        <% order.products.forEach(product => { %>
            <tr>
                <td><%= product.product_id.name %></td>
                <td><%= product.quantity %></td>
                <td><%= product.price %> VND</td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
